<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ElementFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            >

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/element_square"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/h"
                android:paddingLeft="0dp"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/element_square"
                android:layout_alignTop="@id/element_square"
                android:layout_alignBottom="@id/element_square"
                android:stretchColumns="2"
                android:paddingTop="8dp"
                android:paddingLeft="0dp">


                <TableRow>
                    <TextView
                        android:text="Name: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_name"
                        android:text="Hydrogen"
                        android:layout_marginLeft="10dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Symbol: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_symbol"
                        android:text="H"
                        android:layout_marginLeft="10dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Type: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_type"
                        android:text="Nonmetal"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Atomic Number: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_number"
                        android:text="1"
                        android:layout_marginLeft="10dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Atomic Weight: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_weight"
                        android:text="1.008"
                        android:layout_marginLeft="10dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Group Number: "
                        android:layout_column="1"

                        />
                    <TextView android:id="@+id/element_group"
                        android:text="1"
                        android:layout_marginLeft="10dp"
                        />
                </TableRow>


            </TableLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</FrameLayout>
